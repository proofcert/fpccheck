#assert plus_zero Plus
	(induce (ctrl (s z) z z z _ z _)
		(Args\ all N\ imp
			(eq Args (N ++ argv))
			(Plus (N ++ zero ++ N ++ argv)))
		(dummy\ start (ctrl (s z) z z z _ (s z) _))).

#assert plus_zero _
	(autoinduce (ctrl z z z z _ z _) (dummy\ start (ctrl (s z) z z z _ (s z) _))).

#assert plus_succ Plus
	(induce (ctrl (s z) z z z _ z _)
		(Args\ all K\ all M\ all N\ imp
			(eq Args (K ++ M ++ N ++ argv))
			(Plus (K ++ (succ M) ++ (succ N) ++ argv)))
		(dummy\ start (ctrl (s z) z z z _ (s z) _))).

#assert plus_succ _
	(autoinduce (ctrl z z z z _ z _) (dummy\ start (ctrl (s z) z z z _ (s z) _))).

