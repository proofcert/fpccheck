#include "sim-undef.thm".

Define copy_i : list_imap -> i -> i -> prop by
	copy_i Theta argv argv ;
	copy_i Theta (arg@ X Y) (arg@ U V) := copy_i Theta X U /\ copy_i Theta Y V ;
	%
	copy_i Theta X U := member_imap (imap X U) Theta.

